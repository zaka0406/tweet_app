<div class="main user-show">
  <div class="container">
    <div class="user">
      <!-- 以下で、ユーザー名を出力してください -->
      <h2><%= @user.name %></h2>
      <!-- 以下で、メールアドレスを出力してください -->
      <p><%= @user.email %></p>
      <%= link_to("編集","/users/#{@user.id}/edit")%>
      <%= link_to("削除","/users/#{@user.id}/destroy",{method: "post"}) %>
    </div>
  </div>
</div>